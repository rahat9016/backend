<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Enrollment Form</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Poppins", sans-serif;
        margin: 0;
        padding: 0;
        color: #000;
      }
      .header {
        background-color: #1f2e5a;
        color: #fff;
        text-align: center;
        padding: 16px;
        position: relative;
        margin-bottom: 16px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
      }
      .header img {
        width: 64px;
        height: 64px;
      }
      .header > div > img {
        height: 36px;
      }
      .box {
        width: 56px;
        height: 64px;
        border: 1px solid #cdcdcd;
        border-style: dashed;
      }
      h2 {
        margin: 5px 0 0;
        font-size: 18px;
      }
      .section-title {
        background-color: #1f2e5a;
        color: #fff;
        padding: 6px;
        font-weight: 500;
        font-size: 16px;
      }
      .section {
        padding: 12px;
      }
      .row {
        display: flex;
        margin-bottom: 10px;
      }
      .label {
        width: 250px;
        font-weight: 500;
        font-size: 14px;
      }
      .value {
        flex: 1;
        font-weight: 400;
        font-size: 14px;
      }
      .footer {
        padding: 12px;
        text-align: right;
        font-weight: bold;
        font-size: 10px;
      }
      .clone {
        margin-right: 12px;
      }
    </style>
  </head>
  <body>
    <div class="header">
      <img
        src=<%= logo %>
        alt="Logo"
      />
      <div>
        <img src=<%= mainLogo %> alt="panasia.png" />
        <h2 style="text-align: center">Enrollment Form</h2>
      </div>
      <div class="box"></div>
    </div>

    <!-- Student Info -->
    <div class="section-title">Student Information</div>
    <div class="section">
      <div class="row">
        <div class="label">First Name:</div>
        <div class="value">
          <span class="clone">:</span><%= data.firstName %>
        </div>
      </div>
      <div class="row">
        <div class="label">Middle Name:</div>
        <div class="value">
          <span class="clone">:</span><%= data.middleName %>
        </div>
      </div>
      <div class="row">
        <div class="label">Last Name:</div>
        <div class="value">
          <span class="clone">:</span><%= data.lastName %>
        </div>
      </div>
      <div class="row">
        <div class="label">Nick Name:</div>
        <div class="value">
          <span class="clone">:</span><%= data.nickName %>
        </div>
      </div>
      <div class="row">
        <div class="label">Gender:</div>
        <div class="value"><span class="clone">:</span><%= data.gender %></div>
      </div>
      <div class="row">
        <div class="label">Nationality:</div>
        <div class="value">
          <span class="clone">:</span><%= data.nationality %>
        </div>
      </div>
      <div class="row">
        <div class="label">Phone:</div>
        <div class="value"><span class="clone">:</span><%= data.phone %></div>
      </div>
      <div class="row">
        <div class="label">Email:</div>
        <div class="value"><span class="clone">:</span><%= data.email %></div>
      </div>
      <div class="row">
        <div class="label">Address:</div>
        <div class="value"><span class="clone">:</span><%= data.address %></div>
      </div>
      <div class="row">
        <div class="label">Grade Applying For:</div>
        <div class="value">
          <span class="clone">:</span><%= data.gradeApplyingFor %>
        </div>
      </div>
      <div class="row">
        <div class="label">Year Applying For:</div>
        <div class="value">
          <span class="clone">:</span><%= data.yearApplyingFor %>
        </div>
      </div>
      <div class="row">
        <div class="label">Current School Name:</div>
        <div class="value">
          <span class="clone">:</span><%= data.currentSchoolName %>
        </div>
      </div>
    </div>

    <!-- Parent Info -->
    <div class="section-title">Parent/Guardian Information</div>
    <div class="section">
      <div class="row">
        <div class="label">First Name:</div>
        <div class="value">
          <span class="clone">:</span><%= data.parentFirstName %>
        </div>
      </div>
      <div class="row">
        <div class="label">Middle Name:</div>
        <div class="value">
          <span class="clone">:</span><%= data.parentMiddleName %>
        </div>
      </div>
      <div class="row">
        <div class="label">Last Name:</div>
        <div class="value">
          <span class="clone">:</span><%= data.parentLastName %>
        </div>
      </div>
      <div class="row">
        <div class="label">Relation:</div>
        <div class="value">
          <span class="clone">:</span><%= data.parentRelation %>
        </div>
      </div>
      <div class="row">
        <div class="label">Nationality:</div>
        <div class="value">
          <span class="clone">:</span><%= data.parentNationality %>
        </div>
      </div>
      <div class="row">
        <div class="label">Phone:</div>
        <div class="value">
          <span class="clone">:</span><%= data.parentPhone %>
        </div>
      </div>
      <div class="row">
        <div class="label">Email:</div>
        <div class="value">
          <span class="clone">:</span><%= data.parentEmail %>
        </div>
      </div>
      <div class="row">
        <div class="label">Address:</div>
        <div class="value">
          <span class="clone">:</span><%= data.parentAddress %>
        </div>
      </div>
    </div>

    <!-- Additional Info -->
    <div class="section-title">Additional Information</div>
    <div class="section">
      <div class="row">
        <div class="label">Where did you hear from our school?</div>
        <div class="value">
          <span class="clone">:</span>
          <%= data.referralSource %> - <%= data.comments %>
        </div>
      </div>
    </div>

    <div class="footer">
      <div
        style="
          width: 116px;
          height: 1px;
          background: #000000;
          margin-left: auto;
          margin-bottom: 7px;
        "
      ></div>
      Authorizedâ€™s Signature
    </div>
  </body>
</html>
